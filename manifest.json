{
  "name": "Joyride",
  "version": "1.0",
  "description": "Map gamepad events from a Nintento Switch Joy-Con to keyboard events to control Google Drive Slides",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Map Joy-Con on this tab",
    "default_icon": {
      "16": "joyride-icon.png",
      "32": "joyride-icon.png",
      "48": "joyride-icon.png",
      "128": "joyride-icon.png"
    }
  },
  "icons": {
    "16": "joyride-icon.png",
    "32": "joyride-icon.png",
    "48": "joyride-icon.png",
    "128": "joyride-icon.png"
  },
  "manifest_version": 2
}