{
  "name": "Joyride",
  "version": "1.2",
  "description": "Map button presses from the Javascript Gamepad API to KeyboardEvents.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["/src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Map connected gamepads on this tab",
    "default_icon": {
      "16": "/img/joyride-icon.png",
      "32": "/img/joyride-icon.png",
      "48": "/img/joyride-icon.png",
      "128": "/img/joyride-icon.png"
    }
  },
  "icons": {
    "16": "/img/joyride-icon.png",
    "32": "/img/joyride-icon.png",
    "48": "/img/joyride-icon.png",
    "128": "/img/joyride-icon.png"
  },
  "manifest_version": 2
}
